{{!
    @template local_integrity/statement_form

    Template for integrity statemnt form.

    Context variables required for this template:
      notice

    Example context (json):
    {
        "notice": "notice"
    }
}}

<form>
    <div class="m-2">
        {{{notice}}}
    </div>
    <div class="float-right m-1">
        <input type="checkbox" id="id_agree" name="agree" value="1">
        <label for="id_agree">{{#str}}statement:agree, local_integrity{{/str}}</label>
        <div class="text-danger m-1" data-role="agreementrequired" hidden>{{#str}}statement:agreementrequired, local_integrity{{/str}}</div>
    </div>
</form>
